<!-- ######### Ice blocks to overwrite all water ############# -->
<!-- ######################################################### -->
<append xpath="/blocks"> 
<block name="ice">
	<property name="TerrainIndex" value="0"/>
	<property name="CanMobsSpawnOn" value="true"/>
	<property name="DescriptionKey" value="terrainBlockGroupDesc"/>
	<property name="DisplayType" value="blockTerrainFertile"/>
	<property name="Map.Color" value="200,200,255"/>
	<property name="Material" value="Msnow"/>
	<property name="Shape" value="Terrain"/>
	<property name="Mesh" value="terrain"/>
	<property name="Texture" value="178,569,569,569,569,569"/> <!-- 569: stone texture 1 with dirt sound -->
	<property name="ImposterExclude" value="true"/>
	<property name="EconomicValue" value="5"/>
	<property name="EconomicBundleSize" value="1"/>
	<property name="SellableToTrader" value="false"/>
	<property name="NoScrapping" value="true"/>
	<property class="RepairItems">
		<property name="resourceSnowBall" value="10"/>
	</property>
	<drop event="Harvest" name="resourceSnowBall" count="11" tag="oreWoodHarvest"/>
	<drop event="Destroy" count="0"/>
	<drop event="Fall" name="terrSnow" count="1" prob="0.25" stick_chance="1"/>
	<drop event="Fall" name="resourceSnowBall" count="22" prob="0.187" stick_chance="0"/>
	<property name="SortOrder1" value="0000"/>
	<property name="SortOrder2" value="0600"/>
	<property name="FilterTags" value="MC_outdoor,SC_terrain"/>
</block>


</append>

